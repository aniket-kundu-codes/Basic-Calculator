                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="I"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/jj"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="J"
                    android:textColor="@color/teal_900" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/kk"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="K"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/ll"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="L"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/mm"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="M"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/nn"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="N"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/oo"
                    android:layout_width="@dimen/widthll"
