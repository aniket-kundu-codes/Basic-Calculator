<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_9000"
    tools:context=".BaseCalculator">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_base_calculator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number_value_basecal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="78dp"
        android:layout_marginRight="125dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.421" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="@+id/bases"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.353" />

    <RadioGroup
        android:id="@+id/bases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/spinner2"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <RadioButton
            android:id="@+id/sixteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16" />

        <RadioButton
            android:id="@+id/ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10" />

        <RadioButton
            android:id="@+id/eight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8" />

        <RadioButton
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2" />
    </RadioGroup>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/operatorScrollView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_value_basecal">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="385dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/__1"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/gg"
                    android:text="1"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__2"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/gg"
                    android:text="2"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__3"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/gg"
                    android:text="3"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/aa"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="A"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/bb"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="B"
                    android:textColor="@color/teal_900" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/__4"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/gg"
                    android:text="4"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__5"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/gg"
                    android:text="5"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__6"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/gg"
                    android:text="6"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/cc"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="C"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/dd"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="D"
                    android:textColor="@color/teal_900" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/__7"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/gg"
                    android:text="7"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__8"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/gg"
                    android:text="8"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__9"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/gg"
                    android:text="9"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__0"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/gg"
                    android:text="0"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/ee"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="E"
                    android:textColor="@color/teal_900" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/ff"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="F"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/gg"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="G"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/hh"
                    android:layout_width="@dimen/widthll"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
