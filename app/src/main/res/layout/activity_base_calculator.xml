<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_9000"
    tools:context=".BaseCalculator">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_base_calculator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/number_value_basecal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="125dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewBaseCal"
        />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="@id/bases"
        app:layout_constraintTop_toBottomOf="@+id/bases"
        app:layout_constraintVertical_bias="0.353"
        app:layout_constraintBottom_toTopOf="@id/submitbasecal"/>

    <RadioGroup
        android:id="@+id/bases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <RadioButton
            android:id="@+id/sixteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16" />

        <RadioButton
            android:id="@+id/ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10" />

        <RadioButton
            android:id="@+id/eight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8" />

        <RadioButton
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2" />
    </RadioGroup>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="385dp"


            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/__1"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gg"
                    android:text="1"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__2"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gg"
                    android:text="2"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__3"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gg"
                    android:text="3"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/aa"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="A"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/bb"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="B"
                    android:textColor="@color/teal_900" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/__4"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gg"
                    android:text="4"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__5"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gg"
                    android:text="5"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__6"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gg"
                    android:text="6"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/cc"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="C"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/dd"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="D"
                    android:textColor="@color/teal_900" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/__7"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gg"
                    android:text="7"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__8"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gg"
                    android:text="8"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__9"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gg"
                    android:text="9"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/__0"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/gg"
                    android:text="0"
                    android:textColor="@color/teal_700" />

                <Button
                    android:id="@+id/ee"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="E"
                    android:textColor="@color/teal_900" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/ff"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="F"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/gg"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="G"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/hh"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="H"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/ii"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="I"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/jj"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="J"
                    android:textColor="@color/teal_900" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/kk"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="K"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/ll"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="L"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/mm"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="M"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/nn"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="N"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/oo"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="O"
                    android:textColor="@color/teal_900" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/pp"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:layout_weight="1"
                    android:backgroundTint="@color/ggg"
                    android:text="P"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/qq"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="Q"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/rr"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="R"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/ss"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="S"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/tt"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="T"
                    android:textColor="@color/teal_900" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/uu"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="U"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/vv"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="V"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/ww"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="W"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/xx"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="X"
                    android:textColor="@color/teal_900" />

                <Button
                    android:id="@+id/yy"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="Y"
                    android:textColor="@color/teal_900" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/zz"
                    android:layout_width="@dimen/width"
                    android:layout_height="@dimen/height"
                    android:backgroundTint="@color/ggg"
                    android:text="Z"
                    android:textColor="@color/teal_900" />
            </TableRow>


        </TableLayout>


    </ScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_value_basecal">

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number_value_basecal">

            <Button
                android:id="@+id/plusbasecal"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/heightt"
                android:backgroundTint="@color/gggg"
                android:text="+"
                android:textColor="@color/teal_900" />

            <Button
                android:id="@+id/minusbasecal"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/heightt"
                android:backgroundTint="@color/gggg"
                android:text="-"
                android:textColor="@color/teal_900" />

            <Button
                android:id="@+id/multiplybasecal"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/heightt"
                android:backgroundTint="@color/gggg"
                android:text="x"
                android:textColor="@color/teal_900" />

            <Button
                android:id="@+id/dividebasecal"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/heightt"
                android:backgroundTint="@color/gggg"
                android:text="/"
                android:textColor="@color/teal_900" />

            <Button
                android:id="@+id/bracket"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/heightt"
                android:backgroundTint="@color/gggg"
                android:text="()"
                android:textColor="@color/teal_900" />

            <Button
                android:id="@+id/dott"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/heightt"
                android:backgroundTint="@color/gggg"
                android:text="."
                android:textColor="@color/teal_900" />

            <Button
                android:id="@+id/delbasecal"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/heightt"
                android:backgroundTint="@color/gggg"
                android:text="DEl"
                android:textColor="@color/Red" />

            <Button
                android:id="@+id/clearbasecal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Red"
                android:text="CLEAR"
                android:textColor="@color/white" />

        </TableRow>
    </HorizontalScrollView>


    <Button
        android:id="@+id/submitbasecal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/Green"
        android:text="Submit"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/number_value_basecal"
        app:layout_constraintBottom_toBottomOf="@id/number_value_basecal" />

    <ScrollView
        android:id="@+id/scrollViewBaseCal"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="50dp"
        android:foregroundGravity="bottom"
        app:layout_constraintEnd_toStartOf="@+id/bases"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>